<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ticket.TicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img"
            android:scaleType="fitXY"
            android:layout_marginBottom="18sp"
/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:paddingTop="5sp"
            android:layout_marginHorizontal="10sp"
            android:paddingBottom="5sp"
            android:background="@drawable/rectangel">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginHorizontal="3sp"
            android:background="@color/hash_dark"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_yours_ticket"
                android:textSize="29sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/hash_dark"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:paddingTop="5sp"
            android:layout_marginHorizontal="10sp"
            android:paddingBottom="5sp"
           android:layout_marginTop="16sp"
            android:background="@drawable/rectangel">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginHorizontal="3sp"
                android:background="@color/hash_dark"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy ticket"
                    android:textSize="29sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/hash_dark"
                    android:textStyle="bold"/>

                
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190sp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1"
            android:fitsSystemWindows="true"
            android:layout_marginTop="90sp"
            />
    </LinearLayout>

</FrameLayout>