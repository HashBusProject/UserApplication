<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ticket.TicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190sp"
            android:layout_marginBottom="18sp"
            android:scaleType="fitXY"
            android:src="@drawable/img" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_show_your_tickets"
                android:layout_width="250sp"
                android:layout_height="150sp"
                android:elevation="10.6sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_marginHorizontal="3sp"
                android:outlineSpotShadowColor="@color/hash_dark"
                android:background="@color/hash_dark">



                    <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                  android:shadowDx="1.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="0.5"
                    android:shadowColor="@color/hash_dark"
                    android:text="@string/show_your_ticket"

                    android:textColor="@color/hash_dark"
                    android:textSize="29sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/card_buy_ticket"
                android:layout_width="250sp"
                android:layout_height="150sp"
                android:elevation="10.5sp"
                android:layout_marginTop="10sp"
                android:outlineSpotShadowColor="@color/hash_dark"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="3sp"
                android:background="@color/hash_dark">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Buy ticket"
                    android:shadowDx="1.5"
                    android:shadowDy="0.5"
                    android:shadowRadius="0.5"
                    android:shadowColor="@color/hash_dark"
                    android:textColor="@color/hash_dark"
                    android:textSize="29sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190sp"
            android:layout_gravity="bottom"
            android:layout_marginTop="90sp"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1" />
    </LinearLayout>

</FrameLayout>