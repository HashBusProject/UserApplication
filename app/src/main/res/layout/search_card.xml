<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:gravity="center"
    android:layout_marginTop="10sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/hash_dark"
        android:elevation="1.5sp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginVertical="8sp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/startLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginBottom="40sp"
            android:layout_marginStart="9sp"
            android:layout_marginTop="10sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/endLocation"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="End Location"
            android:layout_gravity="bottom"
            android:layout_marginTop="40sp"
            android:paddingBottom="3sp"
            android:layout_marginStart="9sp"
            android:layout_marginBottom="5sp"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20sp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/waitTime"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_gravity="end"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="51sp"
                android:inputType="time"
                android:paddingEnd="3sp"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/waitMinTime"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_gravity="end"
                android:layout_marginStart="20sp"
                android:layout_marginTop="29sp"
                android:layout_marginEnd="30sp"
                android:inputType="text"
                android:text="min"
                android:textColor="@color/white"
                android:textSize="14.6sp" />

        </RelativeLayout>

        <ImageButton
            android:contentDescription="forword"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_gravity="end"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:background="@color/hash_dark"
            android:layout_marginTop="33sp"
            android:layout_marginEnd="16sp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>