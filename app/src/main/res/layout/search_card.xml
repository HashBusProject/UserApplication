<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"

    android:gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/hash_dark"
        android:elevation="1.5sp"
        android:layout_marginHorizontal="1sp"
        android:layout_marginVertical="1sp"
        android:paddingVertical="20sp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/startLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginBottom="40sp"
            android:layout_marginStart="9sp"
            android:layout_marginTop="10sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/endLocation"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="End Location"
            android:layout_gravity="bottom"
            android:layout_marginTop="40sp"
            android:paddingBottom="3sp"
            android:layout_marginStart="9sp"
            android:layout_marginBottom="5sp"

            />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/waitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="51sp"
                android:inputType="time"
                android:paddingEnd="14sp"
                android:paddingStart="-2sp"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/waitMinTime"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="30sp"
                android:layout_marginTop="24sp"
                android:gravity="end"

                android:layout_marginEnd="30sp"
                android:paddingEnd="6sp"
                android:inputType="text"
                android:text="min"
                android:textColor="@color/white"
                android:textSize="14.6sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="16sp"
            android:contentDescription="forword"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="10sp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>