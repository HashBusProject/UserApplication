<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10sp">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10sp"
        android:gravity="center"
        android:layout_marginHorizontal="10sp"
        android:paddingBottom="5sp"
        android:background="@drawable/rectangel">
        <androidx.cardview.widget.CardView
            android:id="@+id/yourTicketCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3sp"

            android:background="@color/hash_dark"

            >
            <LinearLayout
                android:layout_marginTop="6sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

               >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <ImageView
                       android:layout_width="30sp"
                       android:layout_height="30sp"
                       android:src="@drawable/bus_j"
                       android:paddingStart="7sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Journy name :"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2sp"
                    android:textColor="@color/hash_dark"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"

                    />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/journeyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Journey name"
                android:textSize="18sp"
                android:layout_marginTop="2sp"
                android:layout_gravity="center"
                android:textColor="@color/hash_dark"
                />
                </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ticket"
                    android:paddingStart="7sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket id :"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2sp"
                    android:textColor="@color/hash_dark"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"

                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ticketId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket id"
                    android:inputType="number"

                    android:layout_marginTop="2sp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/hash_dark"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6sp"
               >
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/monye"
                    android:paddingStart="7sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket price :"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2sp"
                    android:textColor="@color/hash_dark"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"

                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="18sp"
                  android:paddingTop="3sp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/hash_dark"
                    />

            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>